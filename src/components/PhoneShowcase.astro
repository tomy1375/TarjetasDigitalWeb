---
// Definir las props con tipos
const { title, subtitle, id, images, buttonText, buttonLink } = Astro.props;
---

<section id={id} class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 playfair">{title}</h2>
      <p class="text-gray-600">{subtitle}</p>
    </div>
    
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      {images.map((image) => (
        <div class="relative">
          <div class="phone-mockup">
            <img 
              src={image.src || "/placeholder.svg"}
              alt={image.alt}
              class="w-[250px] h-[500px] object-cover rounded-3xl border-8 border-black relative z-10"
            />
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-20 h-6 bg-black rounded-b-xl z-20"></div>
          </div>
          {image.name && (
            <p class="text-center mt-4 text-sm font-medium">{image.name}</p>
          )}
        </div>
      ))}
    </div>
    
    <div class="flex flex-col items-center gap-4">
      <a 
        href={buttonLink} 
        class="inline-block bg-amber-700 hover:bg-amber-800 text-white font-medium py-3 px-8 rounded-md transition duration-300 ease-in-out transform hover:scale-105"
      >
        {buttonText} â†’
      </a>
      
      <button 
        id={`ver-precios-${id}`}
        class="inline-block border border-amber-700 text-amber-700 hover:bg-amber-50 font-medium py-2 px-6 rounded-full transition duration-300 ease-in-out ver-precios-btn"
      >
        VER PRECIOS
      </button>
    </div>
  </div>
</section>

<style>
  .phone-mockup {
    position: relative;
    padding: 0;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    border-radius: 2rem;
  }
</style>
