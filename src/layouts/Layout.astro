<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Allura&family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap');

	:root {
		--accent: #c8b6a6;
		--accent-dark: #a89985;
		--black: #13151a;
		--gray: #747474;
		--gray-light: #e1e1e1;
		--gray-dark: #4a4a4a;
	}
	html {
		font-family: 'Poppins', system-ui, sans-serif;
		background: #ffffff;
		background-size: 224px;
		color: var(--black);
		scroll-behavior: smooth;
	}

	h1, h2, h3, h4, h5 {
		font-family: 'Playfair Display', serif;
	}

	.playfair {
		font-family: 'Playfair Display', serif;
	}

	.poppins {
		font-family: 'Poppins', sans-serif;
	}

	.allura {
  font-family: 'Allura', cursive;
}
</style>
