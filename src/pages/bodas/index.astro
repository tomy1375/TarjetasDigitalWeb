---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Diseños de Bodas - La Tarjeta Digital">
  <Header />
  
  <main>
    <section class="pt-32 pb-20 bg-gradient-to-b from-gray-900 to-gray-800 text-white">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6 playfair">
          TU BODA MERECE UNA<br />
          <span class="text-amber-100">INVITACIÓN <em>ÚNICA</em></span>
        </h1>
        <p class="text-xl mb-12">SORPRENDE A TUS INVITADOS</p>
        
        <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 max-w-6xl mx-auto">
          {[
            {
              name: "MARTINA & MARCOS",
              image: "/placeholder.svg?height=500&width=250&query=wedding couple holding hands closeup",
              link: "/bodas/martina-marcos"
            },
            {
              name: "NICOLE & ELIAN",
              image: "/placeholder.svg?height=500&width=250&query=couple embracing in sunset",
              link: "/bodas/nicole-elian"
            },
            {
              name: "CANDELA & ELIAS",
              image: "/placeholder.svg?height=500&width=250&query=couple walking on beach wedding",
              link: "/bodas/candela-elias"
            },
            {
              name: "GEORGINA & JOAQUÍN",
              image: "/placeholder.svg?height=500&width=250&query=couple in field at sunset",
              link: "/bodas/georgina-joaquin"
            }
          ].map(design => (
            <div class="flex flex-col items-center">
              <a href={design.link} class="block relative mb-2 sm:mb-4 transform transition-transform hover:scale-105">
                <div class="phone-mockup">
                  <img 
                    src={design.image || "/placeholder.svg"} 
                    alt={design.name}
                    class="w-full max-w-[150px] sm:max-w-[200px] md:max-w-[250px] h-auto aspect-[1/2] object-cover rounded-3xl border-4 sm:border-8 border-black relative z-10"
                  />
                  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-12 sm:w-16 md:w-20 h-3 sm:h-4 md:h-6 bg-black rounded-b-xl z-20"></div>
                </div>
              </a>
              <h3 class="text-sm sm:text-base md:text-lg font-medium">{design.name}</h3>
              <a 
                href={design.link} 
                class="mt-1 sm:mt-2 text-xs sm:text-sm text-amber-300 hover:text-amber-200 transition"
              >
                Ver invitación →
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .phone-mockup {
    position: relative;
    padding: 0;
    box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.3);
    border-radius: 1.5rem;
  }
  
  @media (min-width: 640px) {
    .phone-mockup {
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
      border-radius: 2rem;
    }
  }
</style>
